<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
   android:background="@drawable/rounded_corner"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/mcqResults_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mcq_positive_feedback"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="20dp"
        android:textColor="@color/white"
        android:layout_marginTop="25sp"
         />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="20dp"
        android:layout_below="@+id/mcqResults_tv"
        android:src="@drawable/trophy"
        android:contentDescription="image"/>



    <TextView
        android:id="@+id/Results_congrat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mcq_positive_congratulations"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

<!--    <TextView-->
<!--        android:id="@+id/Results_username_tv"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text="Username"-->
<!--        android:textSize="22sp"-->
<!--        android:textColor="@color/white"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintTop_toBottomOf="@+id/imageView" />-->

    <TextView
        android:id="@+id/Results_score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your score is 9 out of 10"
        android:textSize="20sp"
        android:padding="20dp"
        android:textColor="@color/score_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/Results_return_to_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Returntochat"
        android:textSize="18sp"
       android:backgroundTint="@color/seed_dark_blue"
        android:textColor="@color/score_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />




</LinearLayout>