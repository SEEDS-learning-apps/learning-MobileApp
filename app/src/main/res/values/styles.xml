        <item name="userchat_start_color">@color/user_chat_start_light</item>
        <item name="userchat_end_color">@color/user_chat_end_light</item>
        <item name="Botchat_start_color">@color/bot_chat_start_light</item>
        <item name="Botchat_end_color">@color/bot_chat_end_light</item>
        <item name="Dashboard_cardviewBackground">@color/Dashboard_cardviewBackground_light</item>
