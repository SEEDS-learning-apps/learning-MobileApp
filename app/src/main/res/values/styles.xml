<resources>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/rounded_corner</item>
    </style>

    <style name="Tablayout">Tablayout
        <item name="android:textSize">24sp</item>
    </style>

    <style name="text">Tablayout
        <item name="android:textSize">24sp</item>
    </style>

    <style name="messageStyle">Tablayout
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Seeds">Seeds_app</style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item>
    </style>


    //Dialog box

    <style name="PauseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/PauseDialogAnimation</item>
    </style>

    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>



    <style name="swipeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/swipeDialogAnimation</item>
    </style>

    <style name="swipeDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_left</item>
    </style>

    <style name="swipeDialog_w720dp"  parent="swipeDialog">
        <item name="android:windowEnterAnimation">@anim/flip_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_left</item>
    </style>



    <style name="entryDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowAnimationStyle">@style/entryDialogAnimation</item>
    </style>

    <style name="entryDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_left</item>
    </style>

    <style name="entryDialog_w720dp" parent="entryDialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_left</item>
    </style>


    <!-- APP mode -->

    <style name="WhiteMode" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryVariant">@color/seed_dark_blue</item>
        <item name="colorPrimary">@color/seed_light_blue</item>
        <item name="backgroundcolor">@color/background</item>
        <item name="textcolor">@color/mild_black</item>
        <item name="background">@color/background_mild_black</item>
        <item name="repeatbottomSheetIconColor">#9E151515</item>
        <item name="backgroundInsetStart">@color/Button_start_light</item>
        <item name="backgroundInsetEnd">@color/Button_end_light</item>
        <item name="buttonBarStyle">@color/custom_Button_start_light</item>
        <item name="buttonBarButtonStyle">@color/custom_Button_end_light</item>
    </style>

    <!-- DARK MODE. -->
    <style name="DarkMode" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/seed_light_blue</item>
        <item name="colorPrimaryVariant">@color/seed_dark_blue</item>
        <item name="colorAccent">@color/colorPrimaryblue</item>
        <item name="backgroundcolor">@color/background_black</item>
        <item name="toastcolor">@color/black</item>
        <item name="textcolor">@color/background</item>
        <item name="background">@color/white</item>
        <item name="repeatbottomSheetIconColor">#9EFFFFFF</item>
        <item name="backgroundInsetStart">@color/Button_start_dark</item>
        <item name="backgroundInsetEnd">@color/Button_end_dark</item>
        <item name="buttonBarStyle">@color/custom_Button_start_dark</item>
        <item name="buttonBarButtonStyle">@color/custom_Button_end_dark</item>


    </style>


    <!--    color for white toobar text-->
    <style name="WhiteMode.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@android:color/black</item>
    </style>

    <style name="chipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!--    styleable toast theme-->
    <style name="myToast">
        <item name="colorBackground">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="iconRight">@drawable/toast_success</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>
    <style name="myToast1">
        <item name="colorBackground">@color/white</item>
        <item name="textColor">@color/black</item>
        <item name="iconRight">@drawable/ic_cancel</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">3dp</item>
    </style>
</resources>